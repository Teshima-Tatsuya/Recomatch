		<div class="pure-u-1 pure-u-md-1-3">		
			<div style='padding:5px;'>
				{Asset::img('http://blog-imgs-49.fc2.com/n/o/g/nogumdamnolife/sum_n2_c4_02.gif',['width' => '100%'])}
